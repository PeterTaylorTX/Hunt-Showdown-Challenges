<Window x:Class="Hunt_Showdown_Challenges.Views.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hunt_Showdown_Challenges.Views"
        xmlns:vm="clr-namespace:Hunt_Showdown_Challenges.ViewModels"
        xmlns:data="clr-namespace:Hunt_Showdown_Challenges.Data.Logic"
        xmlns:strings="clr-namespace:Hunt_Showdown_Challenges.Resources.Strings"
        Style="{StaticResource {x:Type Window}}"
        mc:Ignorable="d"
        Title="About" Height="600" Width="800">
    <Grid Margin="20" MaxWidth="700">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Orientation="Vertical">
            <Image Source="/Resources/Images/Bounty_Icon_Smudge.png" Width="100" />
            <Label>
                <TextBlock TextWrapping="WrapWithOverflow" Text="{x:Static strings:UI.AboutPageSummary}"/>
            </Label>
        </StackPanel>


        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Vertical" Margin="0,20">
            <Label Content="{x:Static strings:UI.Developers}" Style="{StaticResource ItemHeader}"/>
            <!-- PETER -->
            <StackPanel Orientation="Horizontal">
                <Label Content="PeterTaylorTX | "/>
                <Label>
                    <Hyperlink NavigateUri="http://twitch.tv/PeterTaylorTX" RequestNavigate="Hyperlink_RequestNavigate">
                        Twitch
                    </Hyperlink>
                </Label>
                <Label Content=" | "/>
                <Label>
                    <Hyperlink NavigateUri="http://petertaylortx.bsky.social" RequestNavigate="Hyperlink_RequestNavigate">
                        BlueSky
                    </Hyperlink>
                </Label>
            </StackPanel>
            <!-- PETER -->
        </StackPanel>


        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical" Margin="0,20">
            <Label Content="{x:Static strings:UI.Testers}" Style="{StaticResource ItemHeader}"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Vertical" Margin="0,20">
            <Label Content="{x:Static strings:UI.ChallengesSubmitted}" Style="{StaticResource ItemHeader}"/>
            <Label Content="PeterTaylorTX"/>
            <Label Content="DJ Crumble"/>
        </StackPanel>


        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Vertical" Margin="0,20">
            <Label Content="{x:Static strings:UI.FeaturesBugs}" Style="{StaticResource ItemHeader}"/>

            <Label>
                <TextBlock TextWrapping="WrapWithOverflow" Text="{x:Static strings:UI.FeaturesBugsDescription}"/>
            </Label>
            <Label>
                <Hyperlink NavigateUri="https://github.com/PeterTaylorTX/Hunt-Showdown-Challenges" RequestNavigate="Hyperlink_RequestNavigate" >
                    GitHub
                </Hyperlink>
            </Label>
            <Label Content="{x:Static strings:UI.Discord}" Style="{StaticResource ItemHeader}" Margin="0,20,0,0"/>
            <Label>
                <Hyperlink NavigateUri="https://discord.taylorsnet.co.uk" RequestNavigate="Hyperlink_RequestNavigate">
                    <TextBlock TextWrapping="WrapWithOverflow" Text="{x:Static strings:UI.JoinTheDiscord}"/>
                </Hyperlink>
            </Label>
        </StackPanel>
    </Grid>
</Window>
